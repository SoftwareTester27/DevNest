<Page
    x:Class="FluentUITest.BrowseMaterials"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentUITest">

	<Grid>

		<!-- Main bordered acrylic card -->
		<Border
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Padding="28"
            CornerRadius="10"
            Margin="20"
            Canvas.ZIndex="0" Background="{ThemeResource CardAcrylicBrush}">

			<ScrollViewer VerticalScrollBarVisibility="Auto">
				<StackPanel x:Name="MainStack">

					<TextBlock Text="📰 Browse Materials"
                               FontSize="45"
                               FontWeight="Bold"
                               Margin="0,0,0,16"
                               HorizontalAlignment="Center"
                               Foreground="{ThemeResource ApplicationForegroundThemeBrush}"/>

					<TextBlock Text="Here, you can find all resources on getting started on Development, like Web Designing, Python, Java, WinUI."
                               Margin="0,0,0,16"
                               FontSize="15"
                               Foreground="#FFFFFF"
                               HorizontalAlignment="Center"
                               TextWrapping="WrapWholeWords"/>

					<GridView
                        Margin="0,10,0,0"
                        IsItemClickEnabled="False"
                        SelectionMode="None"
                        HorizontalAlignment="Left">

						<GridView.ItemsPanel>
							<ItemsPanelTemplate>
								<ItemsWrapGrid
                                    Orientation="Horizontal"
                                    MaximumRowsOrColumns="6" />
							</ItemsPanelTemplate>
						</GridView.ItemsPanel>

						<!-- CARD 1 -->
						<GridViewItem>
							<Border
                                Width="260"
                                Height="256"
                                CornerRadius="16"
                                Padding="12"
                                Background="{ThemeResource CardAcrylicBrush}"
                                Margin="10, 0, 0, 20">

								<StackPanel Spacing="8">
									<TextBlock Text="CLIculator v2 Code"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               TextWrapping="WrapWholeWords"/>

									<Border Height="140" Margin="0,6" CornerRadius="12">
										<Border.Clip>
											<RectangleGeometry Rect="0,0,1000,140"/>
										</Border.Clip>
										<Image Source="ms-appx:///Assets/cliculator.png"
                                               Stretch="UniformToFill"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Center"/>
									</Border>

									<Button HorizontalAlignment="Stretch"
                                            FontWeight="Bold"
                                            FontSize="18"
                                            CornerRadius="10"
                                            Style="{StaticResource AccentButtonStyle}"
                                            Padding="6,4"
                                            Tag="https://github.com/SoftwareTester27/CLIculator/archive/refs/heads/main.zip"
                                            Click="DownloadRepo_Click">
										<StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
											<FontIcon Glyph="&#xE896;" FontSize="16"/>
											<TextBlock Text="Download" />
										</StackPanel>
									</Button>
								</StackPanel>
							</Border>
						</GridViewItem>

						<!-- CARD 2 -->
						<GridViewItem>
							<Border
                                Width="260"
                                Height="256"
                                CornerRadius="16"
                                Padding="12"
                                Background="{ThemeResource CardAcrylicBrush}"
                                Margin="10, 0, 0, 20">

								<StackPanel Spacing="8">
									<TextBlock Text="Windows PixelOS"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               TextWrapping="WrapWholeWords"/>

									<Border Height="140" Margin="0,6" CornerRadius="12">
										<Border.Clip>
											<RectangleGeometry Rect="0,0,1000,140"/>
										</Border.Clip>
										<Image Source="ms-appx:///Assets/WindowsPixelOS.png"
                                               Stretch="UniformToFill"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Center"/>
									</Border>

									<Button HorizontalAlignment="Stretch"
                                            FontWeight="Bold"
                                            FontSize="18"
                                            CornerRadius="10"
                                            Style="{StaticResource AccentButtonStyle}"
                                            Tag="https://github.com/SoftwareTester27/WindowsPixelOS/archive/refs/heads/main.zip"
                                            Click="DownloadRepo_Click"
                                            Padding="6,4">
										<StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
											<FontIcon Glyph="&#xE896;" FontSize="16"/>
											<TextBlock Text="Download" />
										</StackPanel>
									</Button>
								</StackPanel>
							</Border>
						</GridViewItem>

						<!-- CARD 3 -->

						<GridViewItem>
							<Border
                                Width="260"
                                Height="256"
                                CornerRadius="16"
                                Padding="12"
                                Background="{ThemeResource CardAcrylicBrush}"
                                Margin="10, 0, 0, 20">

								<StackPanel Spacing="8">
									<TextBlock Text="SC Website Code"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        HorizontalAlignment="Center"
                                        TextWrapping="WrapWholeWords"/>

									<Border Height="140" Margin="0,6" CornerRadius="12">
										<Border.Clip>
											<RectangleGeometry Rect="0,0,1000,140"/>
										</Border.Clip>
										<Image Source="ms-appx:///Assets/SCwebsite.png"
                                           Stretch="UniformToFill"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Center"/>
									</Border>

									<Button HorizontalAlignment="Stretch"
                                        FontWeight="Bold"
                                        FontSize="18"
                                        CornerRadius="10"
                                        Style="{StaticResource AccentButtonStyle}"
                                        Tag="https://github.com/SoftwareTester27/sc/archive/refs/heads/main.zip"
                                        Click="DownloadRepo_Click"
                                        Padding="6,4">
										<StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
											<FontIcon Glyph="&#xE896;" FontSize="16"/>
											<TextBlock Text="Download" />
										</StackPanel>
									</Button>
								</StackPanel>
							</Border>
						</GridViewItem>

						<!-- CARD 4 -->

						<GridViewItem>
							<Border
                                Width="260"
                                Height="256"
                                CornerRadius="16"
                                Padding="12"
                                Background="{ThemeResource CardAcrylicBrush}"
                                Margin="10, 0, 0, 20">

								<StackPanel Spacing="8">
									<TextBlock Text="CTF Tool"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       TextWrapping="WrapWholeWords"/>

									<Border Height="140" Margin="0,6" CornerRadius="12">
										<Border.Clip>
											<RectangleGeometry Rect="0,0,1000,140"/>
										</Border.Clip>
										<Image Source="ms-appx:///Assets/ctf.png"
                                           Stretch="UniformToFill"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Center"/>
									</Border>

									<Button HorizontalAlignment="Stretch"
                                        FontWeight="Bold"
                                        FontSize="18"
                                        CornerRadius="10"
                                        Style="{StaticResource AccentButtonStyle}"
                                        Tag="https://github.com/SoftwareTester27/Cleartempfilecmd/archive/refs/heads/main.zip"
                                        Click="DownloadRepo_Click"
                                        Padding="6,4">
										<StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
											<FontIcon Glyph="&#xE896;" FontSize="16"/>
											<TextBlock Text="Download" />
										</StackPanel>
									</Button>
								</StackPanel>
							</Border>
						</GridViewItem>

					</GridView>
				</StackPanel>
			</ScrollViewer>
		</Border>

		<!-- Footer -->
		<Border
            VerticalAlignment="Bottom"
            HorizontalAlignment="Stretch"
            Margin="20"
            CornerRadius="10"
            Padding="12,8"
            Canvas.ZIndex="1"
            Background="{ThemeResource CardAcrylicBrush}">

			<StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="24">
				<HyperlinkButton Content="Support"
                                 NavigateUri="https://smartlycoded.vercel.app/"/>
				<HyperlinkButton Content="Github"
                                 NavigateUri="https://github.com/SoftwareTester27/"/>
				<HyperlinkButton Content="Scratch"
                                 NavigateUri="https://scratch.mit.edu/users/The_Cooler-Dude/"/>
			</StackPanel>
		</Border>

		<!-- InfoBar always on top -->
		<Grid
            x:Name="InfoBarHost"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Center"
            Margin="0,0,0,20"
            RenderTransformOrigin="0.5,0.5"
            Canvas.ZIndex="99">

			<Grid.RenderTransform>
				<TranslateTransform x:Name="InfoBarTransform" Y="120"/>
			</Grid.RenderTransform>

			<InfoBar
                x:Name="DownloadInfoBar"
                IsOpen="False"
                IsClosable="True"
                MaxWidth="600"
                CornerRadius="10"
                Canvas.ZIndex="99">

				<StackPanel Spacing="8">
					<TextBlock
                x:Name="InfoBarMessageText"
                TextWrapping="Wrap"/>

					<ProgressBar
                        x:Name="DownloadProgressBar"
                        Height="10"
                        Minimum="0"
                        Maximum="100"
                        Value="100"
                        Margin="10"
                        MaxWidth="200">
                        
						<ProgressBar.RenderTransform>
							<ScaleTransform x:Name="ProgressScale" ScaleX="1" />
						</ProgressBar.RenderTransform>
						<ProgressBar.RenderTransformOrigin>0,0.5</ProgressBar.RenderTransformOrigin>
					</ProgressBar>

				</StackPanel>
			</InfoBar>
		</Grid>
	</Grid>
</Page>