<Application
    x:Class="FluentUITest.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    RequestedTheme="Dark">

	<Application.Resources>
		<ResourceDictionary>

			<ResourceDictionary.MergedDictionaries>
				<controls:XamlControlsResources />
			</ResourceDictionary.MergedDictionaries>

			<!-- SINGLE dark acrylic -->
			<AcrylicBrush x:Key="CardAcrylicBrush"
                          TintColor="#FF1E1E1E"
                          TintOpacity="0.6"
                          FallbackColor="#CC111111"/>

			<x:Double x:Key="ControlCornerRadius">8</x:Double>

			<SolidColorBrush x:Key="TabViewButtonForeground" Color="White"/>
			<SolidColorBrush x:Key="TabViewButtonHoverBackground" Color="#22FFFFFF"/>
			<SolidColorBrush x:Key="TabViewButtonPressedBackground" Color="#33FFFFFF"/>
			<SolidColorBrush x:Key="TabViewButtonSelectedBackground" Color="#44FFFFFF"/>
			<SolidColorBrush x:Key="TabViewButtonBackground" Color="#1F1F1F"/>

		</ResourceDictionary>
	</Application.Resources>
</Application>
