<Page
    x:Class="FluentUITest.BrowseImages"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentUITest">
	<Grid>

		<!-- Main bordered acrylic card -->
		<Border
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Padding="28"
        CornerRadius="10"
        Margin="20"
        Canvas.ZIndex="0" Background="{ThemeResource CardAcrylicBrush}">

			<ScrollViewer VerticalScrollBarVisibility="Auto">
				<StackPanel x:Name="MainStack">

					<TextBlock Text="ðŸ–¼ï¸ Browse Images"
                           FontSize="45"
                           FontWeight="Bold"
                           Margin="0,0,0,16"
                           HorizontalAlignment="Center"
                           Foreground="{ThemeResource ApplicationForegroundThemeBrush}"/>

					<TextBlock Text="Here, you can find all resources on getting started on Development, like Web Designing, Python, Java, WinUI."
                           Margin="0,0,0,16"
                           FontSize="15"
                           Foreground="#FFFFFF"
                           HorizontalAlignment="Center"
                           TextWrapping="WrapWholeWords"/>

					    
				</StackPanel>
			</ScrollViewer>
		</Border>

		<!-- Footer -->
		<Border
        VerticalAlignment="Bottom"
        HorizontalAlignment="Stretch"
        Margin="20"
        CornerRadius="10"
        Padding="12,8"
        Canvas.ZIndex="1"
        Background="{ThemeResource CardAcrylicBrush}">

			<StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="24">
				<HyperlinkButton Content="Support"
                             NavigateUri="https://smartlycoded.vercel.app/"/>
				<HyperlinkButton Content="Github"
                             NavigateUri="https://github.com/SoftwareTester27/"/>
				<HyperlinkButton Content="Scratch"
                             NavigateUri="https://scratch.mit.edu/users/The_Cooler-Dude/"/>
			</StackPanel>
		</Border>

		<!-- InfoBar always on top -->
		<Grid
        x:Name="InfoBarHost"
        VerticalAlignment="Bottom"
        HorizontalAlignment="Center"
        Margin="0,0,0,20"
        RenderTransformOrigin="0.5,0.5"
        Canvas.ZIndex="99">

			<Grid.RenderTransform>
				<TranslateTransform x:Name="InfoBarTransform" Y="120"/>
			</Grid.RenderTransform>

			<InfoBar
            x:Name="DownloadInfoBar"
            IsOpen="False"
            IsClosable="True"
            MaxWidth="600"
            CornerRadius="10"
            Canvas.ZIndex="99">

				<StackPanel Spacing="8">
					<TextBlock
            x:Name="InfoBarMessageText"
            TextWrapping="Wrap"/>

					<ProgressBar
                    x:Name="DownloadProgressBar"
                    Height="10"
                    Minimum="0"
                    Maximum="100"
                    Value="100"
                    Margin="10"
                    MaxWidth="200">

						<ProgressBar.RenderTransform>
							<ScaleTransform x:Name="ProgressScale" ScaleX="1" />
						</ProgressBar.RenderTransform>
						<ProgressBar.RenderTransformOrigin>0,0.5</ProgressBar.RenderTransformOrigin>
					</ProgressBar>

				</StackPanel>
			</InfoBar>
		</Grid>
	</Grid>
</Page>