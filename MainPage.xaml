<Page
    x:Class="FluentUITest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent">

	<!-- ================= RESOURCES ================= -->
	<Page.Resources>

		<!-- Page entrance -->
		<Storyboard x:Name="PageEnterStoryboard">
			<DoubleAnimation
                Storyboard.TargetName="MainStack"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1"
                Duration="0:0:0.6">
				<DoubleAnimation.EasingFunction>
					<CubicEase EasingMode="EaseInOut"/>
				</DoubleAnimation.EasingFunction>
			</DoubleAnimation>
		</Storyboard>

	</Page.Resources>

	<!-- ================= LAYOUT ================= -->
	<Grid>

		<!-- Main Card -->
		<Border
            Margin="20"
            Padding="28"
            CornerRadius="10">

			<Border.Background>
				<AcrylicBrush
                    TintColor="#FF222222"
                    TintOpacity="0.70"
                    FallbackColor="#CC111111"/>
			</Border.Background>

			<StackPanel
                x:Name="MainStack"
                Opacity="1">

				<!-- ================= HEADER ================= -->
				<TextBlock
                    Text="✨ Welcome to DevNest ✨"
                    FontSize="45"
                    FontWeight="Bold"
                    Margin="0,0,0,16"
                    HorizontalAlignment="Center"
                    Foreground="White"/>

				<TextBlock
                    Text="Here, you can find resources to get started with development. Click below to discover what suits you best."
                    FontSize="15"
                    TextWrapping="WrapWholeWords"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,16"
                    Foreground="#DDDDDD"/>

				<!-- ================= START BUTTON ================= -->
				<Button
                    x:Name="StartQuizButton"
                    Content="Get Started"
                    FontSize="23"
                    FontWeight="Bold"
                    Padding="20,15,20,15"
                    CornerRadius="10"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"
                    Click="StartQuizButton_Click"/>

				<!-- ================= QUIZ STACK ================= -->
				<StackPanel
                    x:Name="QuizStack"
                    Visibility="Collapsed"
                    Opacity="1">

					<TextBlock
                        x:Name="QuizQuestion"
                        Text="Question text here..."
                        FontSize="18"
                        TextWrapping="WrapWholeWords"
                        Foreground="#DDDDDD"
                        Margin="0,0,0,16"/>

					<StackPanel
                        x:Name="OptionsPanel"
                        Orientation="Vertical"
                        HorizontalAlignment="Center"
                        Spacing="10"/>
				</StackPanel>

			</StackPanel>
		</Border>

		<!-- ================= FOOTER ================= -->
		<Border
            VerticalAlignment="Bottom"
            HorizontalAlignment="Stretch"
            Margin="20"
            Padding="12,8"
            CornerRadius="10">

			<Border.Background>
				<AcrylicBrush
                    TintColor="#FF222222"
                    TintOpacity="0.45"
                    FallbackColor="#CC111111"/>
			</Border.Background>

			<StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Spacing="24">

				<HyperlinkButton
                    Content="Support"
                    NavigateUri="https://smartlycoded.vercel.app/"/>

				<HyperlinkButton
                    Content="GitHub"
                    NavigateUri="https://github.com/SoftwareTester27/"/>

				<HyperlinkButton
                    Content="Scratch"
                    NavigateUri="https://scratch.mit.edu/users/The_Cooler-Dude/"/>
			</StackPanel>
		</Border>

	</Grid>
</Page>
