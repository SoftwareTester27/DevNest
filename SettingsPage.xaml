<Page
    x:Class="FluentUITest.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentUITest">

	<Grid>

		<!-- MAIN ACRYLIC CARD -->
		<Border
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Padding="28"
            CornerRadius="10"
            Margin="20">

			<Border.Background>
				<AcrylicBrush
                    TintColor="#FF222222"
                    TintOpacity="0.50"
                    FallbackColor="#CC111111"/>
			</Border.Background>

			<ScrollViewer VerticalScrollBarVisibility="Auto">
				<StackPanel Spacing="24">

					<!-- TITLE -->
					<TextBlock
                        Text="Settings"
                        FontSize="45"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Foreground="{ThemeResource ApplicationForegroundThemeBrush}"/>

					<TextBlock
                        Text="Customize DevNest to match your workflow"
                        FontSize="15"
                        Opacity="0.85"
                        HorizontalAlignment="Center"
                        TextWrapping="WrapWholeWords"/>

					<!-- APPEARANCE CARD -->
					<Border
                        CornerRadius="16"
                        Padding="20"
                        Background="#CC1E1E1E">

						<StackPanel Spacing="14">
							<TextBlock
                                Text="Appearance"
                                FontSize="22"
                                FontWeight="Bold"/>

							<ToggleSwitch
                                x:Name="MicaToggle"
                                Header="Enable Mica background"
                                OnContent="On"
                                OffContent="Off"/>

							<ToggleSwitch
                                x:Name="WallpaperToggle"
                                Header="Use desktop wallpaper background"
                                OnContent="On"
                                OffContent="Off"/>
						</StackPanel>
					</Border>

					<!-- NAVIGATION CARD -->
					<Border
                        CornerRadius="16"
                        Padding="20"
                        Background="#CC1E1E1E">

						<StackPanel Spacing="14">
							<TextBlock
                                Text="Navigation"
                                FontSize="22"
                                FontWeight="Bold"/>

							<ToggleSwitch
                                Header="Enable page animations"
                                IsOn="True"/>
						</StackPanel>
					</Border>

					<!-- ABOUT CARD -->
					<Border
                        CornerRadius="16"
                        Padding="20"
                        Background="#CC1E1E1E" Margin="0, 0, 0, 40">

						<StackPanel Spacing="10">
							<TextBlock
                                Text="About DevNest"
                                FontSize="22"
                                FontWeight="Bold"/>

							<TextBlock
                                Text="DevNest is a modern WinUI playground focused on clean UI and smooth UX."
                                Opacity="0.8"
                                TextWrapping="WrapWholeWords"/>

							<TextBlock
                                Text="Version 1.0.0"
                                Opacity="0.6"/>
						</StackPanel>
					</Border>

				</StackPanel>
			</ScrollViewer>
		</Border>

		<!-- FOOTER (MATCHING BrowseMaterials) -->
		<Border
            VerticalAlignment="Bottom"
            HorizontalAlignment="Stretch"
            Margin="20"
            CornerRadius="10"
            Padding="12,8">

			<Border.Background>
				<AcrylicBrush
                    TintColor="#FF222222"
                    TintOpacity="0.45"
                    FallbackColor="#CC111111"/>
			</Border.Background>

			<StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Spacing="24">

				<HyperlinkButton Content="Support"/>
				<HyperlinkButton Content="Github"/>
				<HyperlinkButton Content="Website"/>

			</StackPanel>
		</Border>

	</Grid>
</Page>
